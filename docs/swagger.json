    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
        "/api/auth/login": {
            "post": {
                "description": "Login account",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Login accounts",
                "parameters": [
                    {
                        "description": "Login user",
                        "name": "tags",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/IRequest.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/IResponse.Login"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "IRequest.LoginRequest": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string",
                    "minLength": 6
                }
            }
        },
        "IResponse.Addresses": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "isDefault": {
                    "type": "boolean"
                },
                "lastName": {
                    "type": "string"
                },
                "middleName": {
                    "type": "string"
                },
                "phoneNumber": {
                    "type": "string"
                }
            }
        },
        "IResponse.Login": {
            "type": "object",
            "properties": {
                "access_token": {
                    "type": "string"
                },
                "refresh_token": {
                    "type": "string"
                },
                "user": {
                    "$ref": "#/definitions/IResponse.User"
                }
            }
        },
        "IResponse.Role": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "permissions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "IResponse.User": {
            "type": "object",
            "properties": {
                "_id": {
                    "type": "integer"
                },
                "address": {
                    "type": "string"
                },
                "addresses": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/IResponse.Addresses"
                    }
                },
                "avatar": {
                    "type": "string"
                },
                "city": {
                    "type": "integer"
                },
                "create_at": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "likeProducts": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "middleName": {
                    "type": "string"
                },
                "phoneNumber": {
                    "type": "integer"
                },
                "resetToken": {
                    "type": "string"
                },
                "resetTokenExpiration": {
                    "type": "string"
                },
                "role": {
                    "$ref": "#/definitions/IResponse.Role"
                },
                "status": {
                    "$ref": "#/definitions/db.UsersStatus"
                },
                "viewedProducts": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                }
            }
        },
        "db.UsersStatus": {
            "type": "string",
            "enum": [
                "0",
                "1"
            ],
            "x-enum-varnames": [
                "UsersStatus0",
                "UsersStatus1"
            ]
        }
    },
    "securityDefinitions": {
        "AccessToken": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "externalDocs": {
        "description": "OpenAPI",
        "url": "https://swagger.io/resources/open-api/"
    }
}